<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activityregisterlinearlayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ImageView
        android:src="@drawable/pin_eye2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="13dp"/>

    <EditText
        android:id="@+id/activityregisteruserName"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textSize="15sp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:padding="14dp"
        android:background="@color/colorPrimary"
        android:hint="Please Enter Your Name"
        />

    <EditText
        android:id="@+id/activityregisteruserEmail"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textSize="15sp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:padding="14dp"
        android:inputType="textEmailAddress"
        android:layout_marginTop="15dp"
        android:background="@color/colorPrimary"
        android:hint="Email"
        android:drawableLeft="@mipmap/ic_email"
        android:drawableStart="@mipmap/ic_email"

        />

    <Button
        android:id="@+id/activityregisterregisterButton"
        android:layout_width="225dp"
        android:layout_height="40dp"
        android:text="Register"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:background="@drawable/button_background"
        />

    <Button
        android:id="@+id/activityregisterloginButton"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:text="Already Registered ? Log In"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:background="@drawable/button_background"
        />

</LinearLayout>